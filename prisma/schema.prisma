generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// schema.prisma

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  name      String
  trains    Train[] // This sets up the one-to-many relation
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Train {
  id         Int      @id @default(autoincrement())
  name       String
  departure  DateTime
  arrival    DateTime
  origin     String
  destination String

  userId     Int      // Foreign key to User
  user       User     @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
